{% block beforehead %}{% endblock %}
{% block head %}
{% if config.typeError == null or config.message == null %}<div class="form-group">{% else %}<div class="form-group has-{{config.typeError}}">{% endif %}
<label for="text_area" class="col-md-2 control-label input-{{config.size}}">{{config.label}}</label>
<div class="col-md-10">
{% endblock %}
{% block beforebody %}{% endblock %}
{% block body %}
<textarea class="form-control input-{{config.size}}" id="{{config.id}}" name="{{config.name}}" placeholder="{{config.placeholder}}" rows="{{config.rows}}">{{datos.value}}</textarea>
{% if config.message != null %}<span class="help-block">{{config.message}}</span>{% endif %}
{% endblock %}
{% block afterbody %}{% endblock %}
{% block foot %}</div></div>{% endblock %}
{% block afterfoot %}{% endblock %}