{% block beforehead %}{% endblock %}
{% block head %}
{% if config.seccion == null or config.seccion == "cabecera" %}
{% if config.typeError == null or config.message == null %}<div class="form-group">{% else %}<div class="form-group has-{{config.typeError}}">{% endif %}
<label class="col-md-2 control-label" for="selectbasic">{{config.label}}</label>
<div class="col-md-5">
{% if config.multiple == "no" %}
<select id="{{config.id}}" name="{{config.name}}" class="form-control">
{% else %}
<select id="{{config.id}}" name="{{config.name}}" class="form-control" multiple="multiple">
{% endif %}           
{% endif %}
{% endblock %}
{% block beforebody %}{% endblock %}
{% block body %}
{{hijos | raw}}   
{% endblock %}
{% block afterbody %}{% endblock %}
{% block foot %} 
{% if config.seccion == null or config.seccion == "pie" %} 
</select>{% if config.message != null %}<span class="help-block">{{config.message}}</span>{% endif %}</div></div>
{% endif %}
{% endblock %}
