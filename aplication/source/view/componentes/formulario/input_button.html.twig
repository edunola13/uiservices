{% if config.buttonAfter == 'no' %}<input class="form-control input-{{config.inputSize}}" type="{{config.type}}" id="{{config.id}}" name="{{config.name}}" placeholder="{{config.placeholder}}" value="{{datos.value}}">{% endif %}
{% endblock %}
